body
	background-color #BADD3E
	color #f84F57
	font 16px Arial
section
	background-color #F9969F
	border 10px solid #f84F57
	padding 20px
	margin 20px auto
	width 800px
/* Pseudo Clase Para Enlaces*/
nav a:link,
nav a:visited
	background-color #f84F57
	border 4px solid #f84F57
	color #e1ffcf
	display inline-block
	padding 20px 10px
	text-align center
	text-decortation none
	width 160px
nav a:hover
	background-color #fff
	border 4px solid #f84F57
	color #f84F57
nav a:active
	background-color #63d323
	border 4px solid #63d323
	color #fff
/* Pseudo Clase Para Elemento de Formulario*/
input
	background-color #f84F57
	border none
	display block
	font-size 1.2em
	outline none
	padding 20px
	width 96%
input:focus
	background-color #f42f35
	color #5a672e
/* Instertar Contenido Antes y Despues*/
div.box::after,
div.box::before
	content ''
	position absoulte
div.box
	background-color #EB2A3C
	height 200px
	position relative
	top 0px
	left 0px
	width 200px
div.box::after
	background-color green
	height 100px
	width 100px
	top 0
	left 100px
div.box::before
	background-color blue
	height 100px
	width 100px
	top 100px
	left 0px
/* Primera Letra - Primera Linea */
p::first-letter
	color blue
	font-weight bolder
	font-size 2em
p::first-line
	color black
	
	
		
